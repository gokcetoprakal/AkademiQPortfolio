@model Education
@{
    ViewData["Title"] = "Add Education";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-2xl border p-8 shadow-sm">

        <div class="flex items-center gap-4 mb-8 border-b border-gray-50 pb-6">
            <div class="w-12 h-12 rounded-xl bg-pink-50 text-pink-600 flex items-center justify-center">
                <span class="material-symbols-outlined">school</span>
            </div>
            <div>
                <h2 class="text-xl font-bold text-gray-800">Add New Education</h2>
                <p class="text-sm text-gray-400">Add a new degree or certificate to your profile</p>
            </div>
        </div>

        <form method="post" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700">Degree / Certificate Title</label>
                    <input type="text" asp-for="Title" placeholder="e.g. Bachelor of Computer Science"
                           class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50/50 focus:bg-white focus:ring-2 focus:ring-pink-100 focus:border-pink-400 outline-none transition-all" />
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700">Department / School</label>
                    <input type="text" asp-for="Department" placeholder="e.g. Stanford University"
                           class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50/50 focus:bg-white focus:ring-2 focus:ring-pink-100 focus:border-pink-400 outline-none transition-all" />
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700">Period</label>
                    <input type="text" asp-for="EducationDate" placeholder="e.g. 2018 - 2022"
                           class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50/50 focus:bg-white focus:ring-2 focus:ring-pink-100 focus:border-pink-400 outline-none transition-all" />
                </div>
            </div>

            <div class="space-y-2">
                <label class="text-sm font-semibold text-gray-700">Short Description</label>
                <textarea rows="3" placeholder="Briefly describe your studies..."
                          class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50/50 focus:bg-white focus:ring-2 focus:ring-pink-100 focus:border-pink-400 outline-none transition-all resize-none"></textarea>
            </div>

            <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-50">
                <a href="/Education/Index" class="px-6 py-2.5 rounded-xl border border-gray-100 text-gray-500 font-semibold hover:bg-gray-50 transition-all">
                    Cancel
                </a>
                <button type="submit" class="px-8 py-2.5 rounded-xl bg-pink-600 hover:bg-pink-700 text-white font-semibold shadow-lg shadow-pink-100 transition-all">
                    Save Education
                </button>
            </div>
        </form>
    </div>
</div>