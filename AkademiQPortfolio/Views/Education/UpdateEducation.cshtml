@model Education
@{
    ViewData["Title"] = "Update Education";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-2xl border p-8 shadow-sm">

        <div class="flex items-center gap-4 mb-8 border-b border-gray-50 pb-6">
            <div class="w-12 h-12 rounded-xl bg-blue-50 text-blue-600 flex items-center justify-center">
                <span class="material-symbols-outlined">edit_note</span>
            </div>
            <div>
                <h2 class="text-xl font-bold text-gray-800">Update Education</h2>
                <p class="text-sm text-gray-400">Modify existing record details</p>
            </div>
        </div>

        <form method="post" class="space-y-6">
            @* ID bilgisini gizli olarak gönderiyoruz *@
            <input type="hidden" asp-for="EducationId" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700">Degree / Certificate Title</label>
                    <input type="text" asp-for="Title" class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50/50 focus:bg-white focus:ring-2 focus:ring-blue-100 focus:border-blue-400 outline-none transition-all" />
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700">Department / School</label>
                    <input type="text" asp-for="Department" class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50/50 focus:bg-white focus:ring-2 focus:ring-blue-100 focus:border-blue-400 outline-none transition-all" />
                </div>

                <div class="space-y-2">
                    <label class="text-sm font-semibold text-gray-700">Period</label>
                    <input type="text" asp-for="EducationDate" class="w-full px-4 py-3 rounded-xl border border-gray-100 bg-gray-50/50 focus:bg-white focus:ring-2 focus:ring-blue-100 focus:border-blue-400 outline-none transition-all" />
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 pt-6 border-t border-gray-50">
                <a href="/Education/Index" class="px-6 py-2.5 rounded-xl border border-gray-100 text-gray-500 font-semibold hover:bg-gray-50 transition-all">
                    Back to List
                </a>
                <button type="submit" class="px-8 py-2.5 rounded-xl bg-blue-600 hover:bg-blue-700 text-white font-semibold shadow-lg shadow-blue-100 transition-all">
                    Update Changes
                </button>
            </div>
        </form>
    </div>
</div>