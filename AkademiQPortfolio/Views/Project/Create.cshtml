@model Project
@{
    ViewData["Title"] = "Add Project";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="max-w-3xl p-8 space-y-6 bg-white rounded-2xl border">

    <h2 class="text-2xl font-bold">Add New Project</h2>

    <form asp-action="Create" method="post" class="space-y-4">

        <input asp-for="Title"
               placeholder="Project Title"
               class="w-full px-4 py-3 border rounded-xl" />

        <textarea asp-for="Description"
                  placeholder="Project Description"
                  class="w-full px-4 py-3 border rounded-xl"></textarea>

        <input asp-for="Category"
               placeholder="Category"
               class="w-full px-4 py-3 border rounded-xl" />

        <input asp-for="PublishDate"
               placeholder="PUblishDate"
               class="w-full px-4 py-3 border rounded-xl" />

        <button class="px-6 py-3 bg-primary text-white rounded-xl font-bold">
            Save Project
        </button>

    </form>
</section>
<style>
    section{
        margin-left: 18rem !important;
    }
</style>
