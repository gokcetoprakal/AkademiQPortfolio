@model List<About>

@foreach (var item in Model)
{
    <section id="section2" class="about-section">
        <div class="about-container">

            <div class="about-image-wrapper">
                <img src="~/sility/Pics/benniko.jpeg" alt="Profile photo" />
            </div>

            <div class="about-content">
                <span class="about-label">HAKKIMDA</span>

                <h2 class="about-name">@item.NameSurname</h2>
                <h3 class="about-title">@item.Title</h3>

                <p class="about-description">
                    @item.Description
                </p>

                <div class="about-info">
                    <div class="info-item">
                        <span class="info-icon">🎂</span>
                        <div>
                            <small>Birthday</small>
                            <p>16 Haziran 2005</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-icon">📍</span>
                        <div>
                            <small>Adres</small>
                            <p>@item.Address</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-icon">✉️</span>
                        <div>
                            <small>Email</small>
                            <p>@item.Email</p>
                        </div>
                    </div>

                    <div class="info-item">
                        <span class="info-icon">💻</span>
                        <div>
                            <small>GitHub</small>
                            <p>github.com/gokcetoprakal</p>
                        </div>
                    </div>
                </div>

                <a href="#" class="about-button">⬇CV'mi indirin</a>
            </div>

        </div>
    </section>
}

<style>
    /* ---------- Base ---------- */
    .about-section {
        background-color: #fdfbf8;
        padding: 80px 20px;
        font-family: "Inter", sans-serif;
    }

    .about-container {
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        gap: 80px;
    }

    /* ---------- Image ---------- */
    .about-image-wrapper {
        position: relative;
    }

        .about-image-wrapper img {
            width: 320px;
            height: auto;
            border-radius: 28px;
            box-shadow: 0 25px 60px rgba(216, 142, 161, 0.25);
            background: #fff;
        }

    /* ---------- Content ---------- */
    .about-content {
        max-width: 520px;
    }

    .about-label {
        display: inline-block;
        font-size: 12px;
        font-weight: 700;
        letter-spacing: 2px;
        color: #d88ea1;
        margin-bottom: 12px;
    }

    .about-name {
        font-size: 42px;
        font-weight: 800;
        color: #1f2937;
        margin: 0;
    }

    .about-title {
        font-size: 18px;
        font-weight: 600;
        color: #d88ea1;
        margin: 8px 0 24px;
    }

    .about-description {
        font-size: 16px;
        line-height: 1.7;
        color: #4b5563;
        margin-bottom: 32px;
    }

    /* ---------- Info Grid ---------- */
    .about-info {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px 40px;
        margin-bottom: 40px;
    }

    .info-item {
        display: flex;
        align-items: center;
        gap: 14px;
    }

    .info-icon {
        width: 42px;
        height: 42px;
        background: #f6dbe2;
        color: #c96f86;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
    }

    .info-item small {
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #9ca3af;
    }

    .info-item p {
        margin: 2px 0 0;
        font-size: 14px;
        color: #374151;
        font-weight: 500;
    }

    /* ---------- Button ---------- */
    .about-button {
        background: #d88ea1;
        color: #fff;
        border: none;
        padding: 14px 34px;
        border-radius: 999px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .about-button:hover {
            background: #c8798d;
            box-shadow: 0 12px 30px rgba(216, 142, 161, 0.4);
        }

    /* ---------- Responsive ---------- */
    image (max-width: 900px) {
        .about-container;

    {
        flex-direction: column;
        text-align: center;
    }

    .about-info {
        grid-template-columns: 1fr;
    }

    .info-item {
        justify-content: center;
    }

    }
</style>

