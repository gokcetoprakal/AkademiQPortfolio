@model List<Education>

<section id="section5" class="education-section">
<div class="education-timeline horizontal">

    @foreach(var item in Model){
    <div class="education-item">
        <span class="edu-year">@item.EducationDate</span>
        <div class="edu-dot"></div>
        <div class="edu-content">
            <span>@item.Department</span>
            <h4>@item.Title</h4>
        </div>
    </div>
    }
</div>
    <div class="container">
        <h2>Hobiler ve İlgi Alanları</h2>

        <div class="row hobbies-row">

            <div class="col-sm-2 col-xs-6">
                <div class="icon-box">
                    <div class="icon">
                        <i class="ion-ios-search-strong"></i>
                    </div>
                    <h6>Web Araştırma</h6>
                </div>
            </div>

            <div class="col-sm-2 col-xs-6">
                <div class="icon-box">
                    <div class="icon">
                        <i class="ion-ios-shapes-outline"></i>
                    </div>
                    <h6>Tasarım</h6>
                </div>
            </div>

            <div class="col-sm-2 col-xs-6">
                <div class="icon-box">
                    <div class="icon">
                        <i class="ion-ios-compose"></i>
                    </div>
                    <h6>Resim Çizmek</h6>
                </div>
            </div>

            <div class="col-sm-2 col-xs-6">
                <div class="icon-box">
                    <div class="icon">
                        <i class="ion-ios-book"></i>
                    </div>
                    <h6>Kitap Okumak</h6>
                </div>
            </div>

            <div class="col-sm-2 col-xs-6">
                <div class="icon-box">
                    <div class="icon">
                        <i class="ion-ios-musical-notes"></i>
                    </div>
                    <h6>Müzik Dinlemek</h6>
                </div>
            </div>

        </div>
    </div>
</section>
<style>
    /* ===== Education Section ===== */
    .education-section {
        width: 100vw;
        height: 100vh;
        background: #fdfbf8;
        display: flex;
        flex-direction: column; /* 🔴 EN KRİTİK */
        justify-content: center; /* tüm blok ortada */
        overflow: hidden;
        font-family: "Inter", sans-serif;
    }

    /* Timeline */
    .education-timeline.horizontal {
        position: relative;
        display: flex;
        justify-content: center;
        gap: 28px; /* biraz daha sıkı */
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding-top: 20px;
        margin-bottom: 60px; /* 👈 hobiler için alan */
    }

        /* Yatay çizgi */
        .education-timeline.horizontal::before {
            content: "";
            position: absolute;
            top: 22px;
            left: 0;
            right: 0;
            height: 2px;
            background: #f1cbd5;
        }

    /* Item */
    .education-item {
        flex: 0 0 210px; /* biraz daralttık */
        text-align: center;
        position: relative;
    }

    /* Year */
    .edu-year {
        display: block;
        font-size: 13px;
        font-weight: 700;
        color: #d88ea1;
        margin-bottom: 10px;
    }

    /* Dot */
    .edu-dot {
        width: 14px;
        height: 14px;
        background: #d88ea1;
        border-radius: 50%;
        margin: 0 auto 12px;
        box-shadow: 0 0 0 6px #f6dbe2;
        position: relative;
        z-index: 2;
    }

    /* Card */
    .edu-content {
        background: #ffffff;
        padding: 16px 14px;
        border-radius: 18px;
        box-shadow: 0 14px 26px rgba(216, 142, 161, 0.14);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .edu-content:hover {
            transform: translateY(-6px);
            box-shadow: 0 22px 38px rgba(216, 142, 161, 0.2);
        }

        /* Text */
        .edu-content span {
            font-size: 13px;
            color: #6b7280;
        }

        .edu-content h4 {
            font-size: 14px;
            font-weight: 700;
            margin-top: 6px;
            color: #1f2937;
        }

    /* ===== HOBBIES (Education ALTINDA) ===== */
    .hobbies-section {
        padding-top: 0;
        padding-bottom: 10px;
    }

        .hobbies-section h2 {
            text-align: center;
            margin-bottom: 28px;
            font-size: 22px;
        }

    .hobbies-row {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 18px;
    }

    .icon-box {
        background: #fff;
        padding: 20px 14px;
        text-align: center;
        border-radius: 14px;
        box-shadow: 0 6px 18px rgba(0,0,0,0.07);
        transition: transform .25s ease;
    }

        .icon-box:hover {
            transform: translateY(-5px);
        }

        .icon-box .icon {
            font-size: 28px;
            color: #f48fb1;
            margin-bottom: 8px;
        }

        .icon-box h6 {
            font-size: 13px;
            font-weight: 600;
            margin: 0;
        }

</style>
