@model Skill
@{
    ViewData["Title"] = "Add New Skill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="ml-72 p-8 bg-[#fffcfc] min-h-screen">
    <div class="max-w-2xl mx-auto">
        <a asp-action="Index" class="flex items-center text-pink-400 hover:text-pink-600 mb-6 transition-all text-sm font-semibold">
            <span class="material-symbols-outlined text-base mr-1">arrow_back</span>
            Back to List
        </a>

        <div class="bg-white rounded-3xl shadow-sm border border-pink-50 p-8">
            <div class="mb-8">
                <h2 class="text-2xl font-bold text-gray-800">Add New Skill</h2>
                <p class="text-gray-400 text-sm">Define a new technical skill and its proficiency level.</p>
            </div>

            <form asp-action="Create" method="post" class="space-y-6">
                <div class="space-y-2">
                    <label class="text-sm font-bold text-gray-700 ml-1">Skill Name</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-4 top-3.5 text-pink-300">bolt</span>
                        <input asp-for="SkillTitle" type="text" placeholder="e.g. ASP.NET Core"
                               class="w-full pl-12 pr-4 py-3.5 bg-pink-50/30 border border-pink-100 rounded-2xl focus:ring-2 focus:ring-pink-200 focus:border-pink-400 outline-none transition-all placeholder:text-gray-300" required />
                    </div>
                </div>

                <div class="space-y-2">
                    <div class="flex justify-between items-center ml-1">
                        <label class="text-sm font-bold text-gray-700">Proficiency Level (%)</label>
                        <span id="rangeValue" class="text-pink-500 font-bold text-sm">50%</span>
                    </div>
                    <input asp-for="SkillValue" type="range" min="0" max="100" value="50"
                           class="w-full h-2 bg-pink-100 rounded-lg appearance-none cursor-pointer accent-pink-500"
                           oninput="document.getElementById('rangeValue').innerText = this.value + '%'" />
                    <div class="flex justify-between text-[10px] text-gray-300 font-bold px-1 uppercase tracking-wider">
                        <span>Beginner</span>
                        <span>Expert</span>
                    </div>
                </div>

                <div class="pt-4">
                    <button type="submit" class="w-full bg-pink-500 text-white py-4 rounded-2xl font-bold hover:bg-pink-600 hover:shadow-lg hover:shadow-pink-200 transition-all flex items-center justify-center gap-2">
                        <span class="material-symbols-outlined">save</span>
                        Save Skill
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>